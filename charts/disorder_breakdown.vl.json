{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Mental Disorder Breakdown Across Age Groups",
    "fontSize": 18,
    "font": "Merriweather",
    "anchor": "start"
  },
  "width": "container",
  "height": 350,
  "data": {
    "values": [
      {"age_group": "16-24", "disorder": "Anxiety", "count": 863.6, "order": 1},
      {"age_group": "16-24", "disorder": "Affective", "count": 365.4, "order": 2},
      {"age_group": "16-24", "disorder": "Substance Use", "count": 211.8, "order": 3},
      {"age_group": "25-34", "disorder": "Anxiety", "count": 795.1, "order": 1},
      {"age_group": "25-34", "disorder": "Affective", "count": 352.4, "order": 2},
      {"age_group": "25-34", "disorder": "Substance Use", "count": 148.3, "order": 3},
      {"age_group": "35-44", "disorder": "Anxiety", "count": 552.3, "order": 1},
      {"age_group": "35-44", "disorder": "Affective", "count": 238.3, "order": 2},
      {"age_group": "35-44", "disorder": "Substance Use", "count": 122.9, "order": 3},
      {"age_group": "45-54", "disorder": "Anxiety", "count": 498.5, "order": 1},
      {"age_group": "45-54", "disorder": "Affective", "count": 203.4, "order": 2},
      {"age_group": "45-54", "disorder": "Substance Use", "count": 88.0, "order": 3},
      {"age_group": "55-64", "disorder": "Anxiety", "count": 425.6, "order": 1},
      {"age_group": "55-64", "disorder": "Affective", "count": 200.1, "order": 2},
      {"age_group": "55-64", "disorder": "Substance Use", "count": 40.1, "order": 3},
      {"age_group": "65-74", "disorder": "Anxiety", "count": 214.2, "order": 1},
      {"age_group": "65-74", "disorder": "Affective", "count": 111.3, "order": 2},
      {"age_group": "65-74", "disorder": "Substance Use", "count": 29.1, "order": 3},
      {"age_group": "75-85", "disorder": "Anxiety", "count": 66.0, "order": 1},
      {"age_group": "75-85", "disorder": "Affective", "count": 17.0, "order": 2},
      {"age_group": "75-85", "disorder": "Substance Use", "count": 3.0, "order": 3}
    ]
  },
  "params": [
    {
      "name": "disorder_highlight",
      "select": {"type": "point", "fields": ["disorder"], "on": "mouseover"}
    },
    {
      "name": "disorder_select",
      "select": {"type": "point", "fields": ["disorder"]},
      "bind": "legend"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "area",
        "line": true,
        "point": true
      },
      "encoding": {
        "x": {
          "field": "age_group",
          "type": "nominal",
          "title": "Age Group",
          "axis": {
            "labelAngle": -45,
            "labelFontSize": 12
          },
          "sort": ["16-24", "25-34", "35-44", "45-54", "55-64", "65-74", "75-85"]
        },
        "y": {
          "field": "count",
          "type": "quantitative",
          "title": "Number of People Affected ('000s)",
          "axis": {
            "labelFontSize": 12
          },
          "stack": "zero"
        },
        "color": {
          "field": "disorder",
          "type": "nominal",
          "scale": {
            "domain": ["Anxiety", "Affective", "Substance Use"],
            "range": ["#f4a582", "#92c5de", "#ca0020"]
          },
          "legend": {
            "title": "Disorder Type",
            "titleFontSize": 12,
            "labelFontSize": 11
          }
        },
        "opacity": {
          "condition": [
            {"param": "disorder_select", "value": 1},
            {"param": "disorder_highlight", "value": 1}
          ],
          "value": 0.3
        },
        "order": {
          "field": "order",
          "type": "quantitative"
        },
        "tooltip": [
          {"field": "age_group", "type": "nominal", "title": "Age Group"},
          {"field": "disorder", "type": "nominal", "title": "Disorder Type"},
          {"field": "count", "type": "quantitative", "title": "Affected ('000s)", "format": ".1f"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": -10,
        "fontSize": 11,
        "fontWeight": "bold",
        "color": "#d62728"
      },
      "encoding": {
        "x": {"datum": "16-24"},
        "y": {"datum": 1200},
        "text": {"datum": "↑ Peak mental health burden in young adults"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "dx": -5,
        "dy": -10,
        "fontSize": 11,
        "fontWeight": "bold",
        "color": "#2ca02c"
      },
      "encoding": {
        "x": {"datum": "75-85"},
        "y": {"datum": 150},
        "text": {"datum": "↓ Lower rates in older adults"}
      }
    }
  ]
}
